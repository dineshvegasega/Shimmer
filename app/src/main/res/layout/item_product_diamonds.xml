<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDiamondSizeText"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:text="0.00"
            android:textColor="@color/_000000"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/nunitosans_light"
            tools:ignore="HardcodedText"
            android:padding="@dimen/_4sdp"
            android:gravity="center_vertical"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDiamondColorText"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:text="GH"
            android:textColor="@color/_000000"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/nunitosans_light"
            tools:ignore="HardcodedText"
            android:padding="@dimen/_4sdp"
            android:gravity="center_vertical"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDiamondClarityText"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:text="VS"
            android:textColor="@color/_000000"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/nunitosans_light"
            tools:ignore="HardcodedText"
            android:padding="@dimen/_4sdp"
            android:gravity="center_vertical"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDiamondShapeText"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:text="Round"
            android:textColor="@color/_000000"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/nunitosans_light"
            tools:ignore="HardcodedText"
            android:padding="@dimen/_4sdp"
            android:gravity="center_vertical"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDiamondNoText"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:text="14"
            android:textColor="@color/_000000"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/nunitosans_light"
            tools:ignore="HardcodedText"
            android:padding="@dimen/_4sdp"
            android:gravity="center_vertical"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDiamondTotalWeightText"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:text="0.100"
            android:textColor="@color/_000000"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/nunitosans_light"
            tools:ignore="HardcodedText"
            android:padding="@dimen/_4sdp"
            android:gravity="center_vertical"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>