<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >





        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_all_round_orders"
            android:backgroundTint="@color/app_color"
            tools:ignore="RtlSymmetry">


        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_all_round_orders_left_square"
            android:layout_marginStart="@dimen/_14sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingEnd="@dimen/_13sdp"
            tools:ignore="RtlSymmetry">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback"
                android:textColor="@color/_2A3740"
                android:textSize="@dimen/_12sdp"
                app:fontFamily="@font/nunitosans_bold"
                tools:ignore="HardcodedText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTrackTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_id"
                android:textColor="@color/_79747E"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/nunitosans_semibold"
                tools:ignore="HardcodedText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textTrackValue"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTrackValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/nunitosans_bold"
                tools:ignore="HardcodedText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_2sdp"
                />





            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitle"
                android:background="@color/_A5A5A5"
                android:layout_marginTop="@dimen/_5sdp"
                >
            </View>




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_lorem_ipsum_dolor_sit_amet_consectetur"
                android:textColor="@color/_484848"
                android:textSize="@dimen/_11sdp"
                app:fontFamily="@font/nunitosans_semibold"
                tools:ignore="HardcodedText"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_5sdp"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textDesc"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textValidDateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/valid_date"
                    android:textColor="@color/_79747E"
                    android:textSize="@dimen/_9sdp"
                    app:fontFamily="@font/nunitosans_semibold"
                    tools:ignore="HardcodedText"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textValidDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Sept"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    app:fontFamily="@font/nunitosans_bold"
                    tools:ignore="HardcodedText"
                    app:layout_constraintTop_toBottomOf="@+id/textDesc"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="@dimen/_5sdp"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textTitle"
                    android:background="@color/_A5A5A5"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:visibility="invisible"
                    >
                </View>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btStatus"
                    style="@style/PrimaryButtonBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_24sdp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/resolved"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/_138808"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="invisible"
                    app:cornerRadius="@dimen/_4sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>



