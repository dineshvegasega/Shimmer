<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIconCheckChild"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        app:layout_constraintDimensionRatio="H,1:1.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/check_icon"
        android:layout_marginStart="@dimen/_5sdp"
        app:tint="@color/app_color"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textItemChild"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="₹10000 - ₹15000"
        android:textColor="@color/_2A3740"
        android:textSize="@dimen/_10sdp"
        app:fontFamily="@font/nunitosans_light"
        app:layout_constraintStart_toEndOf="@+id/ivIconCheckChild"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="@dimen/_5sdp"
        tools:ignore="HardcodedText"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_5sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>