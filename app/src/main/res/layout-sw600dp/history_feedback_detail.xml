<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_FFFCF8">

    <include layout="@layout/top_bar_close"
        android:id="@+id/top_bar_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTrackingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tracking_id"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:fontFamily="@font/nunitosans_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar_close"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        tools:ignore="HardcodedText" />


    <include layout="@layout/history_type"
        android:id="@+id/inclide_history_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textTrackingTxt"
        android:visibility="visible"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inclide_history_type"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/how_satisfied_were_you_with_tge_resolution_of_your_complaint"
                android:textColor="@color/_2A3740"
                android:textSize="@dimen/_8sdp"
                app:fontFamily="@font/nunitosans_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1"
                android:visibility="visible"
                android:rating="0"
                android:minHeight="@dimen/_30sdp"
                android:maxHeight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                app:layout_constraintTop_toBottomOf="@+id/textRating"
                app:layout_constraintStart_toStartOf="parent"
                android:isIndicator="true"
                />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textComments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/comments"
                android:textColor="@color/_2A3740"
                android:textSize="@dimen/_8sdp"
                app:fontFamily="@font/nunitosans_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar"
                tools:ignore="MissingConstraints"

                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextComments"
                style="@style/PrimaryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="top"
                android:hint="@string/comments"
                android:maxLines="4"
                android:textSize="@dimen/_8sdp"
                android:minHeight="@dimen/_70sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:focusable="false"
                android:singleLine="false"
                android:text=""
                android:maxLength="100"
                android:textColor="@color/_322F35"
                app:layout_constraintTop_toBottomOf="@+id/textComments"
               />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>