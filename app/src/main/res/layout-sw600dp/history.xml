<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/top_bar_back"
        android:id="@+id/top_bar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        />



<!--    <androidx.appcompat.widget.AppCompatTextView-->
<!--        android:id="@+id/textTitle"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginHorizontal="@dimen/_15sdp"-->
<!--        android:layout_marginVertical="@dimen/_12sdp"-->
<!--        android:text="@string/complaints_feedback"-->
<!--        android:textColor="@color/_2A3740"-->
<!--        android:textSize="@dimen/_17sdp"-->
<!--        app:fontFamily="@font/nunitosans_semibold"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/top_bar_back"-->
<!--        tools:ignore="HardcodedText" />-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tabsLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar_back">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btComplaint"
            style="@style/PrimaryButtonBlue"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="@string/complaint"
            android:textColor="@color/white"
            android:textSize="@dimen/_7sdp"
            app:backgroundTint="@color/_9F0625"
            app:cornerRadius="@dimen/_4sdp"
            app:rippleColor="@color/_868686" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btFeedback"
            style="@style/PrimaryButtonBlue"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="@string/feedback"
            android:textColor="@color/black"
            android:textSize="@dimen/_7sdp"
            app:backgroundTint="@color/white"
            app:cornerRadius="@dimen/_4sdp"
            app:rippleColor="@color/_868686"
            app:strokeColor="@color/black" />




    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComplaint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_history"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tabsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        tools:itemCount="10"
        android:paddingHorizontal="@dimen/_3sdp"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/_3sdp"
        android:scrollbarThumbVertical="@color/app_color"
        android:fadeScrollbars="false"
        android:visibility="invisible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFeedback"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_history"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tabsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        tools:itemCount="10"
        android:paddingHorizontal="@dimen/_3sdp"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/_3sdp"
        android:scrollbarThumbVertical="@color/app_color"
        android:fadeScrollbars="false"
        android:visibility="invisible"
        />

    <include layout="@layout/data_not_found"
        android:id="@+id/id_data_not_found"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFabIcon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:theme="@style/RoundCorner5"
        app:layout_constraintDimensionRatio="H,1:1.1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/plus_vector"
        android:layout_margin="@dimen/_20sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>