<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Shimmer" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/app_color</item>
        <item name="colorOnPrimary">@color/_ffffff</item>
        <item name="colorSecondary">@color/app_color</item>
        <item name="colorSecondaryVariant">@color/app_color</item>
        <item name="colorOnSecondary">@color/_000000</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <style name="LogoutDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!--        <item name="colorAccent">@color/_E79D46</item>-->
        <!--        <item name="android:textColorPrimary">@color/_E79D46</item>-->
        <!--        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>-->
        <!--        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>-->
        <!--        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>-->
        <!--        <item name="android:dialogMessage">@style/ButtonStyle</item>-->
        <!--        <item name="android:background">@color/white</item>-->
        <!--        <item name="materialAlertDialogBodyTextStyle">@style/AppTheme.MyMaterialAlertDialog.Body.Text</item>-->
        <item name="materialAlertDialogTitleTextStyle">@style/AppTheme.MyMaterialAlertDialog.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AppTheme.MyMaterialAlertDialog.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppTheme.MyMaterialAlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppTheme.MyMaterialAlertDialog.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.MyMaterialAlertDialog.Button.Neutral</item>
    </style>

    <style name="AppTheme.MyMaterialAlertDialog.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/_E79D46</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="AppTheme.MyMaterialAlertDialog.Body.Text" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/_E79D46</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <style name="AppTheme.MyMaterialAlertDialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/_484848</item>
        <item name="android:textColor">@color/_272727</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="AppTheme.MyMaterialAlertDialog.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/_484848</item>
        <item name="android:textColor">@color/_272727</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="AppTheme.MyMaterialAlertDialog.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/_484848</item>
        <item name="android:textColor">@color/_272727</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavThem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/app_color</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
    </style>


    <!--Primary Button in Whole App-->
    <style name="PrimaryButtonBlue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:colorPrimary">@color/_424041</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>

    </style>

</resources>